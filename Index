  <style>
    body, html { margin: 0; padding: 0; height: 100%; }
    #map { height: 100%; width: 100%; }

    /* --- LÉGENDE --- */
    .legend {
      position: absolute;
      bottom: 20px;
      left: 20px;
      background: white;
      padding: 10px 14px;
      border-radius: 8px;
      font-family: Arial, sans-serif;
      font-size: 14px;
      line-height: 1.6;
      box-shadow: 0 0 8px rgba(0,0,0,0.25);
      z-index: 9999;
    }
    .legend div {
      display: flex;
      align-items: center;
      gap: 8px;
    }
    .circle {
      width: 14px;
      height: 14px;
      border-radius: 50%;
      display: inline-block;
    }
